@model ChatServerSignalRWithIdentity.Data.DTO.AppUserResponse

@{
    ViewData["Title"] = "Home Page";
    var userName = User.Identity.Name;
}


<div class="jumbotron bg-light">

    <div class="row">
        <div class="col-md-12" id="friends">

            
            @if (Model != null)
            {
                string containerClass, timePosition, textAlign, contcolor, offset;

                    containerClass = "container";
                    timePosition = "time-left";
                    textAlign = "sendertext-right";
                    contcolor = "bg-light";

                <div class="row" onclick="OpenDialog">

                    <div class="col-md-3">
                        Maybe it is he?
                        <img src="Images/pf.jpg"
                             width="50" height="50" alt="avatar" class="rounded-circle">
                    </div>

                    <div class="col-md-5 offset-md-2">
                        <div class="@containerClass @contcolor">
                            <p class="sender @textAlign">@Model.Login</p>
                        </div>
                    </div>
                </div>
                <p></p>
            }

            else
            {
                <h1>No result</h1>
            }

        </div>
    </div>
</div>


@if (User.Identity.IsAuthenticated)
{
    <script>
        const userName = "@ViewBag.CurrentUserName";
    </script>
}

<script src="~/lib/signalr/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/js/chat.js"></script>
<script src="~/js/signalrReqHandler.js"></script>

